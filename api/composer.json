{
    "name": "mapard/api",
    "description": "API for MAPA-RD Intelligence Report",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*",
        "setasign/fpdf": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "MapaRD\\Services\\": "services/"
        },
        "classmap": [
            "services/"
        ]
    },
    "authors": [
        {
            "name": "Felipe Miramontes",
            "email": "dev@felipemiramontesr.net"
        }
    ],
    "scripts": {
        "test": "phpunit --colors=always",
        "lint": "phpcs --standard=PSR12 services/",
        "fix": "phpcbf --standard=PSR12 services/",
        "analyze": "phpstan analyse services --level 5"
    }
}